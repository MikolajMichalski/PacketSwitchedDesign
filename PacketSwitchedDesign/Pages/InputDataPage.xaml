<Page x:Class="PacketSwitchedDesign.Pages.InputDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PacketSwitchedDesign.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="768"
      Title="InputDataPage">


    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Number of nodes" FontSize="20" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="NumberOfNodes" Margin="5" Width="50" FontSize="25" BorderBrush="Black" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
