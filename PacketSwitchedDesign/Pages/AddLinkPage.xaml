<Page x:Class="PacketSwitchedDesign.Pages.AddLinkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="384"
	Title="AddLinkPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Węzeł początkowy" FontSize="20" HorizontalAlignment="Center" Margin="10,10,10,0"/>
            <Label Content="Węzeł końcowy" FontSize="20" HorizontalAlignment="Center" Margin="10,10,10,0"/>
            <Button Content="Dodaj" Margin="10" Width="100" Height="30" Click="AddLinkClick"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="StartNodeNumber" Margin="15,15,15,0" Width="50" FontSize="20" BorderBrush="Black"/>
            <TextBox x:Name="EndNodeNumber" Margin="15" Width="50" FontSize="20" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Page>
